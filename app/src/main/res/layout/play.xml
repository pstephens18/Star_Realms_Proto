<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background = "@drawable/milky_way"
    tools:context="edu.whitworth.test1.Play">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trade: 2"
        android:id="@+id/textView11"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Combat: 2"
        android:id="@+id/textView13"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Opponent Authority: 50"
        android:id="@+id/textView14"
        android:textColor="#ffffff"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play All"
        android:id="@+id/button5"
        android:layout_above="@+id/textView13"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/button6"
        android:onClick = "quit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src = "@drawable/battlepod2"
        android:id="@+id/imageView5"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/battleblob6"
        android:id="@+id/imageView6"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/blobcarrier6"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/blobdestroyer4"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/blob_fighter1"
        android:id="@+id/imageView9"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/mothership7"
        android:id="@+id/imageView10"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/ram3"
        android:id="@+id/imageView11"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/tradepod2"
        android:id="@+id/imageView12"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignStart="@+id/imageView6" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/battlepod2"
        android:id="@+id/imageView13"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/blobcarrier6"
        android:id="@+id/imageView14"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_alignStart="@+id/imageView8" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:src="@drawable/blobdestroyer4"
        android:id="@+id/imageView15"
        android:layout_alignBottom="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Authority: 50"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentStart="true" />

</RelativeLayout>
